    <div class="container d-flex align-items-center">

        <!--<h1 class="logo me-auto"><a href="index.html">TriM</a></h1>-->
        <!-- Uncomment below if you prefer to use an image logo -->
        <a href="{{ path('app_home') }}" class="logo me-auto"><img src="{{asset('img/logo.png')}}" alt="" class="img-fluid"></a>

        <nav id="navbar" class="navbar order-last order-lg-0">
            <ul>
                {% if app.user %}
                    <li><a class="nav-link scrollto active" href="{{path('chef_lab')}}">Profil</a></li>
                {% endif %}

                <li><a class="nav-link scrollto active" href="{{path('app_home')}}">Accueil</a></li>
